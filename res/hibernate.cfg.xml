<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <!-- 配置关于数据库连接的四个项：driverClass  url username password -->
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/supply_chain?serverTimezone=GMT%2B8
        </property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">kkk123456***</property>

        <!-- 可以将向数据库发送的SQL语句显示出来 -->
        <property name="hibernate.show_sql">true</property>
        <!-- 格式化SQL语句 -->
        <property name="hibernate.format_sql">true</property>

        <!-- hibernate的方言 -->
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>

        <!-- 配置hibernate的映射文件所在的位置 -->
        <mapping class="cn.edu.scut.sse.supply.pojo.User"/>
        <mapping resource="User.hbm.xml"/>
        <mapping class="cn.edu.scut.sse.supply.pojo.Enterprise"/>
        <mapping resource="Enterprise.hbm.xml"/>
        <mapping class="cn.edu.scut.sse.supply.pojo.BankUser"/>
        <mapping resource="BankUser.hbm.xml"/>
        <mapping class="cn.edu.scut.sse.supply.pojo.CoreEnterpriseUser"/>
        <mapping resource="CoreEnterpriseUser.hbm.xml"/>
        <mapping class="cn.edu.scut.sse.supply.pojo.DownstreamEnterpriseUser"/>
        <mapping resource="DownstreamEnterpriseUser.hbm.xml"/>
        <mapping class="cn.edu.scut.sse.supply.pojo.ExpressUser"/>
        <mapping resource="ExpressUser.hbm.xml"/>
        <mapping class="cn.edu.scut.sse.supply.pojo.InsuranceUser"/>
        <mapping resource="InsuranceUser.hbm.xml"/>
        <mapping class="cn.edu.scut.sse.supply.pojo.UpstreamEnterpriseUser"/>
        <mapping resource="UpstreamEnterpriseUser.hbm.xml"/>
        <mapping class="cn.edu.scut.sse.supply.pojo.CoreEnterpriseContract"/>
        <mapping resource="CoreEnterpriseContract.hbm.xml"/>

    </session-factory>
</hibernate-configuration>