<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="cn.edu.scut.sse.supply.pojo.User" table="user" schema="supply_chain">
        <id name="uid">
            <column name="uid" sql-type="int(11)"/>
            <generator class="increment"/>
        </id>
        <property name="username">
            <column name="username" sql-type="varchar(50)" length="50"/>
        </property>
        <property name="password">
            <column name="password" sql-type="varchar(50)" length="50"/>
        </property>
        <property name="token">
            <column name="token" sql-type="varchar(256)" length="256"/>
        </property>
    </class>
</hibernate-mapping>